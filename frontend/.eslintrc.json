{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": [
      1,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "quotes": ["error", "single"],
    "no-var": 2,
    "import/no-named-as-default": 0
  }
}
